<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".FiltradoProductosCategoria">


    <TextView
        android:id="@+id/lblFiltrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/lblFiltrado" />

    <Spinner
        android:id="@+id/spinnerCat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblFiltrado"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/lblProdFiltrados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerCat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/lblProdFiltrados" />

    <ListView
        android:id="@+id/lstViewProdFiltrados"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lblProdFiltrados"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>
