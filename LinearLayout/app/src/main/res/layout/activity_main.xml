<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:baselineAligned="true"
    android:orientation="vertical"
    tools:context="com.tologo.linearlayout.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:background="#00ddff"
        android:baselineAligned="true"
        android:orientation="horizontal"
        tools:context="com.tologo.linearlayout.MainActivity">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#ff0000"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="rojo"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="#9fe01c"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="verde"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="#002fff"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="azul"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="#f7ff00"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="amarillo"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="#649605" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:background="#c855fa"
        android:gravity="fill_vertical"
        android:text="columna_uno"
        android:textColor="#ffffff"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="#649605" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:background="#c855fa"
        android:gravity="fill_vertical"
        android:text="columna_dos"
        android:textColor="#ffffff"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="#649605" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:background="#c855fa"
        android:gravity="fill_vertical"
        android:text="columna_tres"
        android:textColor="#ffffff"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="#649605" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:background="#c855fa"
        android:gravity="fill_vertical"
        android:text="columna_cuatro"
        android:textColor="#ffffff"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="#649605" />

</LinearLayout>
